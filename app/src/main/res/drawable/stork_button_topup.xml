<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- กำหนดสีและขนาดของขอบ -->
    <stroke
        android:width="2dp"
        android:color="@color/black" /> <!-- สีแดง -->


    <!-- กำหนดรัศมีของมุม (ถ้าต้องการมุมโค้งมน) -->
    <corners android:radius="4dp" /> <!-- มุมโค้งมน 4dp -->

    <!-- กำหนด padding ระหว่างเนื้อหาและขอบ -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>