<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="414dp"
                android:layout_height="156dp"
                android:layout_marginBottom="736dp"
                android:background="@drawable/top_homepage_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/editTextTextsearch"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="53dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="82dp"
                    android:background="@drawable/stroke_search_bar"
                    android:drawableStart="@drawable/search_icon"
                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:hint="Search . . ."
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#9aa2aa"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="412dp"
                android:layout_height="660dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <ImageView
                    android:id="@+id/imagetshirt"
                    android:layout_width="148dp"
                    android:layout_height="167dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/stork_button_topup"
                    android:onClick="onImageClick"
                    android:src="@drawable/tshirt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textcloths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Cloths"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/imagetshirt"
                    app:layout_constraintEnd_toEndOf="@+id/imagetshirt"
                    app:layout_constraintHorizontal_bias="0.485"
                    app:layout_constraintStart_toStartOf="@+id/imagetshirt"
                    app:layout_constraintTop_toTopOf="@+id/imagetshirt"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/imagecomputer"
                    android:layout_width="143dp"
                    android:layout_height="162dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="37dp"
                    android:background="@drawable/stork_button_topup"
                    android:onClick="onImageClick"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/responsive" />

                <TextView
                    android:id="@+id/textdigitals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Digitals"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/imagecomputer"
                    app:layout_constraintEnd_toEndOf="@+id/imagecomputer"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="@+id/imagecomputer"
                    app:layout_constraintTop_toTopOf="@+id/imagecomputer"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/imagetools"
                    android:layout_width="145dp"
                    android:layout_height="164dp"
                    android:layout_marginStart="28dp"
                    android:background="@drawable/stork_button_topup"
                    android:onClick="onImageClick"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/toolbox"
                    tools:layout_editor_absoluteY="216dp" />

                <TextView
                    android:id="@+id/textTools"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tools"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/imagetools"
                    app:layout_constraintEnd_toEndOf="@+id/imagetools"
                    app:layout_constraintHorizontal_bias="0.472"
                    app:layout_constraintStart_toStartOf="@+id/imagetools"
                    app:layout_constraintTop_toTopOf="@+id/imagetools"
                    app:layout_constraintVertical_bias="0.841" />

                <ImageView
                    android:id="@+id/imagefurniture"
                    android:layout_width="143dp"
                    android:layout_height="164dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/stork_button_topup"
                    android:onClick="onImageClick"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/furniture"
                    tools:layout_editor_absoluteY="216dp" />

                <TextView
                    android:id="@+id/textFurniture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Furniture"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/imagefurniture"
                    app:layout_constraintEnd_toEndOf="@+id/imagefurniture"
                    app:layout_constraintHorizontal_bias="0.476"
                    app:layout_constraintStart_toStartOf="@+id/imagefurniture"
                    app:layout_constraintTop_toTopOf="@+id/imagefurniture"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/imagetoys"
                    android:layout_width="140dp"
                    android:layout_height="163dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginBottom="88dp"
                    android:background="@drawable/stork_button_topup"
                    android:onClick="onImageClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagetools"
                    app:layout_constraintVertical_bias="0.947"
                    app:srcCompat="@drawable/storagebox" />

                <TextView
                    android:id="@+id/textToys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Toys"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/imagetoys"
                    app:layout_constraintEnd_toEndOf="@+id/imagetoys"
                    app:layout_constraintStart_toStartOf="@+id/imagetoys"
                    app:layout_constraintTop_toTopOf="@+id/imagetoys"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/imagemusic"
                    android:layout_width="139dp"
                    android:layout_height="165dp"
                    android:layout_marginEnd="36dp"
                    android:layout_marginBottom="88dp"
                    android:background="@drawable/stork_button_topup"
                    android:onClick="onImageClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagefurniture"
                    app:layout_constraintVertical_bias="0.941"
                    app:srcCompat="@drawable/music" />

                <TextView
                    android:id="@+id/textmusic_Instrument"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Music Instrument"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/imagemusic"
                    app:layout_constraintEnd_toEndOf="@+id/imagemusic"
                    app:layout_constraintHorizontal_bias="0.461"
                    app:layout_constraintStart_toStartOf="@+id/imagemusic"
                    app:layout_constraintTop_toTopOf="@+id/imagemusic"
                    app:layout_constraintVertical_bias="1.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="410dp"
        android:layout_height="70dp"
        android:background="@drawable/round_back_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/me_btn"
            android:layout_width="136dp"
            android:layout_height="70dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cart_btn"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@drawable/profile_homepage" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Me"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_btn"
            android:layout_width="132dp"
            android:layout_height="66dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@drawable/home_homepage" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Home"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cart_btn"
            android:layout_width="132dp"
            android:layout_height="66dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/me_btn"
            app:layout_constraintStart_toEndOf="@+id/home_btn"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@drawable/cart_homepage" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cart"
                android:textAlignment="center"

                android:textStyle="bold" />
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>